{
  "manifest_version": 2,

  "name": "FitFactor",
  "description": "Chrome Extension and Android app to block social networking/other sites until you meet your fitness goals",
  "version": "1.0",

  "content_scripts": [
    {
      "matches": ["http://*/", "https://*/"],
      "js": ["content_script.js"]
    }
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "permissions": [
    "http://*/",
    "https://*/"
  ],
  "browser_action": {
    "default_popup": "popup.html"        // optional
  }
}
